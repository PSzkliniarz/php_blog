<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link
                    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
                    rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                    crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}
    </head>
    <body>
        <div style="width: 85%; margin:20px auto">
            <div style="
            padding: 5px;
            background-color: #9ED2C6;
            border-radius: 5px;
            display: flex;
            justify-content: space-between">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div>{{ app.user.email }}</div>
                    <div>
                        <a style="margin:15px" href="{{ url('app_post_index') }}">Posty</a>
                        <a style="margin:15px" href="{{ url('app_category_index') }}">Kategorie</a>
                        <a style="margin:15px" href="{{ path('app_post_new') }}">Nowy Post</a>
                        <a style="margin:15px" href="{{ path('app_category_new') }}">Nowa kategoria</a>
                    </div>
                    <div>
                        <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>
                    </div>
                {% else %}
                    <div>
                        <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>
                    </div>
                {% endif %}
            </div>
            {% block body %}


            {% endblock %}
        </div>

    </body>
</html>