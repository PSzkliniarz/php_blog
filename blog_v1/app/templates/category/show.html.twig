{% extends 'base.html.twig' %}

{% block title %}{{ 'label.category'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'label.category'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'label.name'|trans }}</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}"><th>{{ 'label.back'|trans }}</th></a>

    {% if is_granted('EDIT', category) %}
        <a href="{{ path('category_edit', {'id': category.id}) }}">{{ 'action.edit'|trans }}</a>
    {% endif %}

    {% if is_granted('DELETE', category) %}
        {{ include('category/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
