    <a id="back" href="{{ url('post_show', {id:comment.post.id}) }}" class="btn btn-outline-secondary">
        {{ 'action.back_to_list'|trans }}
    </a>
</div>
<h1>{{ 'title.comment_delete'|trans({'%id%': comment.id|default('')}) }}</h1>
